@using System.Web.Optimization;
<html>
<head>
    @RenderSection("head", false)
    @Styles.Render("~/Content/Styles.css")
    <script src="~/Content/JavaScript.js"></script>
    <title>
        LC_Library
    </title>
</head>
<body>
    @RenderBody()
    <header>
        @RenderSection("header", true)
    </header>
    <main>
        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
            window.onload = function ()
            {
                alert("@ViewBag.Message");
            };
            </script>
        }
        <br />
        @RenderSection("main", true)
    </main>
    <aside>
        <hr style="width:80%;" />
        @if (Session["userID"] != null)
        {
            @Html.ActionLink("List of Books", "ListBook", "Books", null, new { @class = "asideLink" })
            <hr style="width:80%;" />
            @Html.ActionLink("Add Book", "AddBook", "Books", null, new { @class = "asideLink" })
            <hr style="width:80%;" />
            @Html.ActionLink("Edit Book", "EditBook", "Books", null, new { @class = "asideLink" })
            <hr style="width:80%;" />
            @Html.ActionLink("Reservations List", "ReservationList", "Reservations", null, new { @class = "asideLink" })
            <hr style="width:80%;" />
        }
        <div>
            @{
                if (Session["userID"] == null)
                {
                    <label class="asideLink"> Loged as: Unknown</label>
                }
                else
                {
                    <label class="asideLink"> Loged as: @Session["userName"].ToString()</label>
                    <br />
                    @Html.ActionLink("Log Out", "LogOut", "Users", null, new { @class = "asideLink" })
                }
            }
        </div>
        <hr style="width:80%;" />
    </aside>
</body>
</html>